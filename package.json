{
  "name": "golfcart-infotainment",
  "version": "1.0.0",
  "description": "Modern infotainment system for EZ-GO TXT golf cart with CarPlay support",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:webpack\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:webpack": "webpack serve --mode development",
    "dev:electron": "electron . --dev",
    "build": "webpack --mode production",
    "build:pi": "npm run build && electron-builder --linux --armv7l",
    "test": "jest"
  },
  "keywords": ["golf-cart", "infotainment", "carplay", "raspberry-pi"],
  "author": "Golf Cart Infotainment",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "@mui/material": "^5.14.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "framer-motion": "^10.16.0",
    "mapbox-gl": "^3.0.0",
    "react-map-gl": "^7.1.0",
    "noble": "^1.9.1",
    "serialport": "^12.0.0",
    "axios": "^1.6.0",
    "react-use": "^17.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "electron-builder": "^24.6.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "jest": "^29.7.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.golfcart.infotainment",
    "productName": "GolfCart Infotainment",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["armv7l"]
        }
      ],
      "category": "Utility"
    }
  }
}